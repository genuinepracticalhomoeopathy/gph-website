rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Blogs collection rules
    match /blogs/{blogId} {
      // Allow read access to all users (public blog posts)
      allow read: if true;
      
      // Allow write access only to authenticated admin users
      // Update these email addresses with your actual admin emails
      allow write: if request.auth != null && 
        request.auth.token.email in [
          'admin@example.com',  // Replace with your admin email
          'your-email@domain.com'  // Add more admin emails as needed
        ];
    }
    
    // Default rule: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

// Note: Update the admin email addresses above with your actual admin emails
// before deploying to production!